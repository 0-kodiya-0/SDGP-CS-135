{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*.ts", "bin/**/*.ts", "build/**/*.ts", "plugin-template/src/**/*.ts", "plugin-template/**/*.ts"],
  "exclude": ["node_modules"]
}
