{
  "id": "example-plugin",
  "name": "Example Plugin",
  "version": "1.0.0",
  "description": "An example plugin demonstrating storage and network APIs with message bus communication",
  "author": "Your Name",
  "internalPlugin": false,
  "view": {
    "summary": {
      "entryPoint": "summary/index.js"
    },
    "expand": {
      "entryPoint": "expand/index.js"
    }
  },
  "background": {
    "entryPoint": "background/index.js"
  },
  "permissions": {
    "storage": {
      "read": true,
      "write": true
    },
    "network": {
      "http": true,
      "websocket": false
    }
  },
  "assets": {
    "bundles": [
      "assets/main-BN8_nLEq.css",
      "assets/main-CGdRpvQD.js",
      "assets/main-CGELn_5A.js",
      "assets/main-CV3h13xX.css",
      "background/index.js"
    ],
    "images": [],
    "other": [
      "src/views/expand/index.html",
      "src/views/summary/index.html"
    ]
  },
  "settings": {
    "enabled": true,
    "autoStart": true,
    "displayMode": "minimal",
    "customOptions": {
      "syncInterval": 60,
      "dataEndpoint": "https://api.example.com/data"
    }
  },
  "categories": [
    "data",
    "utility"
  ],
  "tags": [
    "sync",
    "network",
    "storage"
  ]
}