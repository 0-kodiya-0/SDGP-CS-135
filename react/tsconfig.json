{
    "compilerOptions": {
        "jsx": "react-jsx",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "ESNext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "baseUrl": "src",
        "paths": {
            "@icons": ["icons/index.ts"],
            "@components/*" : ["components/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "plugins": [
        {
            "name": "typescript-plugin-css-modules"
        }
    ]
}